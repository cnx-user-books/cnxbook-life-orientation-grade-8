              </row>
            </tbody>
          </tgroup>
        </table>
        <list id="id12030678" list-type="bulleted">
          <item>
            <emphasis effect="bold">For the TRIP OVERSEAS</emphasis>
          </item>
        </list>
        <table id="id12634429" summary="">
          <tgroup cols="3">
            <colspec colnum="1" colname="c1"/>
            <colspec colnum="2" colname="c2"/>
            <colspec colnum="3" colname="c3"/>
